{
  "name": "ottopsy",
  "version": "0.0.1",
  "description": "Dissect the OTT solution",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
     "declarativeContent",
    "webRequest",
	  "webRequestBlocking",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["/background/index.js"]
  },
  "page_action": {
    "default_popup": "/page_action/popup.html",
    "default_icon": {
      "16": "images/ottball_logo_min-16_x_16.png",
      "32": "images/ottball_logo_min-32_x_32.png",
      "48": "images/ottball_logo_min-48_x_48.png",
      "128": "images/ottball_logo_min-128_x_128.png"
    }
  },
  "icons": {
    "16": "images/ottball_logo_min-16_x_16.png",
    "32": "images/ottball_logo_min-32_x_32.png",
    "48": "images/ottball_logo_min-48_x_48.png",
    "128": "images/ottball_logo_min-128_x_128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
      "data/patterns.json"
  ]
}
